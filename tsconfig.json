{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@middleware": [
        "./src/middleware"
      ],
      "@entities": [
        "./src/entities"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@common/*": [
        "./src/common/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "upload",
    "docs",
    "docker"
  ]
}
